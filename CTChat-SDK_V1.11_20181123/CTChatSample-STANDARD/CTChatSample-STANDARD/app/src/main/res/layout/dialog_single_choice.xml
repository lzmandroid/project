<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <TextView
        android:id="@+id/tv_single_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/storage_location"
        android:gravity="center"
        android:textColor="@color/gray"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_bottom_color" />
    <ListView
        android:id="@+id/lv_single_choice_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/gray"
        android:dividerHeight="1dp"
        android:cacheColorHint="@color/transparent"
        android:fadingEdge="none">
    </ListView>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_bottom_color" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btn_single_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/cancel"
            android:background="@drawable/selector_contacts_list_item"
            />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rl_back_to_contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/back"
                    android:textSize="16sp"
                    android:layout_marginTop="14dp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"/>
            </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <TextView
                android:id="@+id/tv_online_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/online_status"
                android:textColor="@color/gray"
                android:textSize="12dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"/>
            <TextView
                android:id="@+id/tv_detail_status"
                android:layout_toRightOf="@id/tv_online_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="13dp"
                android:textColor="@color/gray"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_bottom_color"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <TextView
                android:id="@+id/tv_contact_detail_number_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                android:textSize="12dp"
                android:text="@string/contact_account"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"/>
            <TextView
                android:id="@+id/tv_contact_detail_number"
                android:layout_toRightOf="@id/tv_contact_detail_number_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/gray"
                android:layout_marginLeft="13dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_bottom_color"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <TextView
                android:id="@+id/tv_contact_detail_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/department"
                android:textColor="@color/gray"
                android:textSize="12dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"/>
            <TextView
                android:id="@+id/tv_contact_detail_department_name"
                android:layout_toRightOf="@id/tv_contact_detail_department"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/gray"
                android:layout_marginLeft="13dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_bottom_color"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical"
        android:background="@color/bg_contact_first_letter">
        <RelativeLayout
            android:id="@+id/rl_start_talk"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@color/gray"
            android:clickable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_talk"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_marginLeft="4dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_immediate_message"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/gray"
            android:clickable="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/immediate_message"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_marginLeft="4dp"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>